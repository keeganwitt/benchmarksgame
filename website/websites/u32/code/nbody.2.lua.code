    <span class="hl kwa">local</span> bi <span class="hl opt">=</span> bodies<span class="hl opt">[</span>i<span class="hl opt">]</span>
    <span class="hl kwa">local</span> bix<span class="hl opt">,</span> biy<span class="hl opt">,</span> biz<span class="hl opt">,</span> bimass <span class="hl opt">=</span> bi<span class="hl opt">.</span>x<span class="hl opt">,</span> bi<span class="hl opt">.</span>y<span class="hl opt">,</span> bi<span class="hl opt">.</span>z<span class="hl opt">,</span> bi<span class="hl opt">.</span>mass
    <span class="hl kwa">local</span> bivx<span class="hl opt">,</span> bivy<span class="hl opt">,</span> bivz <span class="hl opt">=</span> bi<span class="hl opt">.</span>vx<span class="hl opt">,</span> bi<span class="hl opt">.</span>vy<span class="hl opt">,</span> bi<span class="hl opt">.</span>vz
    <span class="hl kwa">for</span> j<span class="hl opt">=</span>i<span class="hl opt">+</span><span class="hl num">1</span><span class="hl opt">,</span>nbody <span class="hl kwa">do</span>
      <span class="hl kwa">local</span> bj <span class="hl opt">=</span> bodies<span class="hl opt">[</span>j<span class="hl opt">]</span>
      <span class="hl kwa">local</span> dx<span class="hl opt">,</span> dy<span class="hl opt">,</span> dz <span class="hl opt">=</span> bix<span class="hl opt">-</span>bj<span class="hl opt">.</span>x<span class="hl opt">,</span> biy<span class="hl opt">-</span>bj<span class="hl opt">.</span>y<span class="hl opt">,</span> biz<span class="hl opt">-</span>bj<span class="hl opt">.</span>z
      <span class="hl kwa">local</span> mag <span class="hl opt">=</span> <span class="hl kwb">sqrt</span><span class="hl opt">(</span>dx<span class="hl opt">*</span>dx <span class="hl opt">+</span> dy<span class="hl opt">*</span>dy <span class="hl opt">+</span> dz<span class="hl opt">*</span>dz<span class="hl opt">)</span>
      mag <span class="hl opt">=</span> dt <span class="hl opt">/ (</span>mag <span class="hl opt">*</span> mag <span class="hl opt">*</span> mag<span class="hl opt">)</span>
      <span class="hl kwa">local</span> bm <span class="hl opt">=</span> bj<span class="hl opt">.</span>mass<span class="hl opt">*</span>mag
      bivx <span class="hl opt">=</span> bivx <span class="hl opt">- (</span>dx <span class="hl opt">*</span> bm<span class="hl opt">)</span>
      bivy <span class="hl opt">=</span> bivy <span class="hl opt">- (</span>dy <span class="hl opt">*</span> bm<span class="hl opt">)</span>
      bivz <span class="hl opt">=</span> bivz <span class="hl opt">- (</span>dz <span class="hl opt">*</span> bm<span class="hl opt">)</span>
      bm <span class="hl opt">=</span> bimass<span class="hl opt">*</span>mag
      bj<span class="hl opt">.</span>vx <span class="hl opt">=</span> bj<span class="hl opt">.</span>vx <span class="hl opt">+ (</span>dx <span class="hl opt">*</span> bm<span class="hl opt">)</span>
      bj<span class="hl opt">.</span>vy <span class="hl opt">=</span> bj<span class="hl opt">.</span>vy <span class="hl opt">+ (</span>dy <span class="hl opt">*</span> bm<span class="hl opt">)</span>
      bj<span class="hl opt">.</span>vz <span class="hl opt">=</span> bj<span class="hl opt">.</span>vz <span class="hl opt">+ (</span>dz <span class="hl opt">*</span> bm<span class="hl opt">)</span>
    <span class="hl kwa">end</span>
    bi<span class="hl opt">.</span>vx <span class="hl opt">=</span> bivx
    bi<span class="hl opt">.</span>vy <span class="hl opt">=</span> bivy
    bi<span class="hl opt">.</span>vz <span class="hl opt">=</span> bivz
    bi<span class="hl opt">.</span>x <span class="hl opt">=</span> bix <span class="hl opt">+</span> dt <span class="hl opt">*</span> bivx
    bi<span class="hl opt">.</span>y <span class="hl opt">=</span> biy <span class="hl opt">+</span> dt <span class="hl opt">*</span> bivy
    bi<span class="hl opt">.</span>z <span class="hl opt">=</span> biz <span class="hl opt">+</span> dt <span class="hl opt">*</span> bivz
  <span class="hl kwa">end</span>
