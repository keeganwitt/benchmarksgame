<span class="hl kwa">local function</span> <span class="hl kwd">energy</span><span class="hl opt">(</span>bodies<span class="hl opt">,</span> nbody<span class="hl opt">)</span>
  <span class="hl kwa">local</span> e <span class="hl opt">=</span> <span class="hl num">0</span>
