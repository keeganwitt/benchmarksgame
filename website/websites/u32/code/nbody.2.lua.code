    <span class="hl kwa">local</span> bi <span class="hl opt">=</span> bodies<span class="hl opt">[</span>i<span class="hl opt">]</span>
    <span class="hl kwa">local</span> vx<span class="hl opt">,</span> vy<span class="hl opt">,</span> vz<span class="hl opt">,</span> bim <span class="hl opt">=</span> bi<span class="hl opt">.</span>vx<span class="hl opt">,</span> bi<span class="hl opt">.</span>vy<span class="hl opt">,</span> bi<span class="hl opt">.</span>vz<span class="hl opt">,</span> bi<span class="hl opt">.</span>mass
    e <span class="hl opt">=</span> e <span class="hl opt">+ (</span><span class="hl num">0.5</span> <span class="hl opt">*</span> bim <span class="hl opt">* (</span>vx<span class="hl opt">*</span>vx <span class="hl opt">+</span> vy<span class="hl opt">*</span>vy <span class="hl opt">+</span> vz<span class="hl opt">*</span>vz<span class="hl opt">))</span>
    <span class="hl kwa">for</span> j<span class="hl opt">=</span>i<span class="hl opt">+</span><span class="hl num">1</span><span class="hl opt">,</span>nbody <span class="hl kwa">do</span>
      <span class="hl kwa">local</span> bj <span class="hl opt">=</span> bodies<span class="hl opt">[</span>j<span class="hl opt">]</span>
      <span class="hl kwa">local</span> dx<span class="hl opt">,</span> dy<span class="hl opt">,</span> dz <span class="hl opt">=</span> bi<span class="hl opt">.</span>x<span class="hl opt">-</span>bj<span class="hl opt">.</span>x<span class="hl opt">,</span> bi<span class="hl opt">.</span>y<span class="hl opt">-</span>bj<span class="hl opt">.</span>y<span class="hl opt">,</span> bi<span class="hl opt">.</span>z<span class="hl opt">-</span>bj<span class="hl opt">.</span>z
      <span class="hl kwa">local</span> distance <span class="hl opt">=</span> <span class="hl kwb">sqrt</span><span class="hl opt">(</span>dx<span class="hl opt">*</span>dx <span class="hl opt">+</span> dy<span class="hl opt">*</span>dy <span class="hl opt">+</span> dz<span class="hl opt">*</span>dz<span class="hl opt">)</span>
      e <span class="hl opt">=</span> e <span class="hl opt">- ((</span>bim <span class="hl opt">*</span> bj<span class="hl opt">.</span>mass<span class="hl opt">) /</span> distance<span class="hl opt">)</span>
    <span class="hl kwa">end</span>
  <span class="hl kwa">end</span>
  <span class="hl kwa">return</span> e
<span class="hl kwa">end</span>

